/* pages/home/home.wxss */

.home_wrap {
  background-color: #21272e;
}

.top>image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}

.top>.two {
  float: right;
}

.sousuo {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
  float: left;
}

.search {
  width: 90%;
  line-height: 80px;
  background-color: #2d353d;
  overflow: hidden;
  margin: 0 auto;
  border-radius: 40rpx;
}

.input {
  height: 80rpx;
}

.author {
  color: white;
}

.all {
  color: #a2a8ba;
  font-size: 24rpx;
  float: right;
}

.ranking>.title {
  overflow: hidden;
  margin: 40rpx 0;
}

.tuwen>image {
  width: 160rpx;
  height: 160rpx;
}

.tuwen>text {
  color: #fff;
  display: block;
  font-size: 26rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
}

.tuwen {
  margin-right: 20rpx;
}

.ranking {
  border-bottom: 1px solid #a2a8ba;
}

.a {
  display: flex;
  justify-content: space-between;
}

.b {
  padding-bottom: 20px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.tw>image {
  width: 200rpx;
  height: 240rpx;
}

.tw>text {
  color: #fff;
  display: block;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.tw>.text {
  margin-bottom: 40rpx;
  color: #a2a8ba;
  font-size: 23rpx;
}

.bottom {
  width: 90%;
  margin: 0 auto;
}

.rmss {
  color: #fff;
  margin-top: 30px;
  margin-bottom: 15px;
}

.ssbox {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.sscontent {
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 30rpx;
  margin-bottom: 25rpx;
}

.zuihou {
  margin-top: 60rpx;
}

.hotlist {
  display: inline-flex;
  margin-top: 20rpx;
}

.left {
  width: 600rpx;
  height: 250rpx;
  background-color: #2b323b;
  padding: 0 0 30rpx 30rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  margin: 75rpx 30rpx 80rpx 0rpx;
}

.right {
  float: left;
  width: 350rpx;
}

.left>.img {
  width: 170rpx;
  height: 250rpx;
  float: left;
  margin-top: -30rpx;
  margin-right: 28rpx;
}

.right>.title {
  padding-top: 30rpx;
  color: #fff;
  font-size: 36rpx;
}

.right>.author {
  color: #53596f;
  margin-top: 13rpx;
  font-size: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #353c46;
}

.right>.jieshao {
  font-size: 24rpx;
  color: #868dab;
  margin-top: 15rpx;
}
