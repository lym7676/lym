page {
  height: 100%;
  background-color: #21272e;
}

.top {
  text-align: center;
  padding: 20rpx;
}

.top text {
  color: #fff;
  font-size: 40rpx;
}

.top image {
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-right: 20rpx;
}

.sousuo {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
  float: left;
}

.search {
  width: 90%;
  line-height: 80px;
  background-color: #2d353d;
  overflow: hidden;
  margin: 0 auto;
  border-radius: 40rpx;
}

.input {
  height: 80rpx;
}

.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
  border-bottom: 1px solid #2d353d;
  margin-top: 40rpx;
}

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
  color: #545f6c;
}

.tab-item.active {
  color: #fff;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 4rpx;
  width: 90rpx;
  background: #fb6894;
  position: absolute;
  bottom: 0;
  left: -10rpx;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675f9;
  color: #4675f9;
}

.scoll-h {
  height: 100%;
}

.author {
  color: white;
}

.all {
  color: #a2a8ba;
  font-size: 24rpx;
  float: right;
}

.ranking>.title {
  overflow: hidden;
  margin: 40rpx 0;
}

.ranking {
  width: 90%;
  margin: 0 auto;
}

.ranking1 {
  border-top: 1px solid #2c3139;
}

.a {
  display: flex;
  justify-content: space-between;
}

.b {
  padding-bottom: 20px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.tw>image {
  width: 205rpx;
  height: 270rpx;
}

.tw>text {
  color: #fff;
  display: block;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.tw>.text {
  margin-bottom: 40rpx;
  color: #a2a8ba;
  font-size: 23rpx;
}
