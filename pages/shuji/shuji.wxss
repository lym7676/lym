@import '../../img/iconfont';
.shuji_wrap{
  width: 90%;
  margin: auto;
}
.icon-start-copy{
  color: #fb6894;
}
.top{
  display: flex;
  padding-top: 30px;
  margin: 0 40rpx;
}
.img image{
  width: 250rpx;
  height: 370rpx;
  margin-right: 20rpx;
}
.hanzi{
  padding-top: 15px;
}
.hanzi text{
  
  margin-top: 20rpx;
  line-height: 45rpx;
}
.title{
  display: block;
  color: #fff;
  font-size: 40rpx;
}
.author{
  display: block;
  color: #828d9a;
}
.jieshao{
  display: block;
  color: #828d9a;
