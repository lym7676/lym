  margin: 40rpx;
}
.tuwen{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}
.wu{
  font-size: 40rpx;
  color: #ffce44;
}
.three{
  padding-bottom: 40rpx;
  color: #fff;
}
.a{
  margin: 0 40rpx;
  border-bottom: 1px solid #323643;
}
.yi{
  font-size: 35rpx;
  padding-bottom: 20rpx;
}
.er{
  font-size: 24rpx;
  color: #828d9a;
}
.four {
  color: #fff;
  width: 90%;
  margin: 0 auto;
  border-bottom: 1px solid #333c47;
  line-height: 100rpx;
}

.four_two {
